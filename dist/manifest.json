{
  "name": "Enhancement Suite for DEGIRO",
  "version": "1.0.0",
  "description": "A suite of enhancements for the DEGIRO webtrader.",
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "72": "icons/icon72.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "144": "icons/icon144.png",
    "192": "icons/icon192.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "Enhancement Suite for DEGIRO",
    "default_icon": "icons/icon48-round.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://trader.degiro.nl/*"],
      "all_frames": true,
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": [
    "css/theme.css",
    "css/themes/dark.css",
    "css/themes/soft-blue.css",
    "css/themes/soft-green.css",
    "css/themes/black-hole.css",
    "css/themes/high-contrast-white.css",
    "css/themes/high-contrast-black.css"
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://trader.degiro.nl/*"
  ],
  "manifest_version": 2
}
