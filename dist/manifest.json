{
  "name": "Enhancement Suite for DEGIRO",
  "version": "0.0.1",
  "description": "A suite of enhancements for the DEGIRO webtrader.",
  "background": {
    "persistent": true,
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "Enhancement Suite for DEGIRO",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://trader.degiro.nl/*"],
      "all_frames": true,
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": [
    "css/theme.css",
    "css/themes/soft.css",
    "css/themes/dark.css",
    "css/themes/black-hole.css",
    "css/themes/high-contrast-white.css",
    "css/themes/high-contrast-black.css"
  ],
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://trader.degiro.nl/*"
  ],
  "manifest_version": 2
}
