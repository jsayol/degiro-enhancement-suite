{
    "name": "Extended Settings for DEGIRO",
    "version": "0.0.1",
    "description": "Extended settings for DEGIRO webtrader.",
    "background": {
        "persistent": true,
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_title": "Extended Settings for DEGIRO",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus",
        "cookies",
        "history",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://trader.degiro.nl/trader/*"
    ],
    "manifest_version": 2
}